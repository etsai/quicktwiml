<% include top %>
<div>
  <form id="twiml-form" action="/TwiML" method="POST" class="span6" style="margin-top: 5em; border: 1px solid rgba(0,0,0,0.125); border-radius: 4px; ">
    <% if (twiml.key) { %>
      <input type="hidden" name="key" value="<%= twiml.key %>" />
      <script>key = '<%= twiml.key %>';</script>
    <% } else { %>
      <script>var key;</script>
    <% } %>
    <fieldset style="overflow: hidden; border-radius: 4px; ">
      <legend style="padding-left: 40px; padding-right: 14px; -moz-box-sizing: border-box; box-sizing: border-box; margin-bottom: 0; ">
        <input id="title" type="text" name="title" maxlength="255" value="<% if (twiml.title) { %><%= twiml.title %><% } %>" placeholder="New TwiML Script" />
      </legend>
      <textarea id="content-textarea" name="content" required><% if (twiml.content) { %><%= twiml.content %><% } else { %><?xml version="1.0" encoding="UTF-8"?><% } %></textarea>
      <div id="content-ace" style="width: 100%; height: 20em; "></div>
      <div style="text-align: right; padding: 14px; border-top: 1px solid rgba(0,0,0,0.125); ">
        <input id="call" type="button" class="btn btn-success disabled" value="☎ Call" disabled />
        <% if (!embed) { %>
          <input id="save" type="submit" class="btn disabled" value="✔ Save" disabled />
        <% } %>
      </div>
    </fieldset>
  </form>
</div>
<div class="span6" style="margin-top: 5em; margin-left: auto; margin-right: auto; display: block; float: none; " >
  <ol>
    <% twimls.forEach(function(twiml) { %>
      <li><a href="/TwiML/<%= twiml.key %>"><%= twiml.title ? twiml.title : 'Untitled TwiML Script' %></a></li>
    <% }); %>
  </ol>
</div>
<% include bottom %>
