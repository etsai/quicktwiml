<% include top %>
<div>
  <form id="twiml-form" action="/TwiML<% if (twiml.key && false) { %>/<%= twiml.key %><% } %>" method="POST" class="span6" style="margin-top: 5em; border: 1px solid rgba(0,0,0,0.125); border-radius: 4px; ">
    <% if (twiml.key) { %>
      <script>var key = '<%= twiml.key %>';</script>
    <% } else { %>
      <script>var key;</script>
    <% } %>
    <fieldset style="overflow: hidden; border-radius: 4px; ">
      <legend style="padding-left: 40px; padding-right: 14px; -moz-box-sizing: border-box; box-sizing: border-box; margin-bottom: 0; ">
        <input id="title" type="text" name="title" maxlength="255" value="<% if (twiml.title) { %><%= twiml.title %><% } %>" placeholder="New TwiML Script" />
      </legend>
      <textarea id="content-textarea" name="content" required><% if (twiml.content) { %><%= twiml.content %><% } else { %><?xml version="1.0" encoding="UTF-8"?><% } %></textarea>
      <div id="content-ace" style="width: 100%; height: 20em; "></div>
<% if (!embed) { %>
<% } %>
      <div style="text-align: right; padding: 14px; border-top: 1px solid rgba(0,0,0,0.125); ">
        <a href="//www.twilio.com/" style="text: decoration: none; display: inline-block; width: 166px; height: 0; overflow: hidden; padding-top: 31px; background: url(//www.twilio.com/packages/company/img/logos_icon_poweredbysmall.png) no-repeat; float: left;" target="_blank">powered by twilio™</a>
        <input id="call" type="button" class="btn btn-success disabled" value="☎ Call" disabled />
        <% if (!embed) { %>
          <input id="save" type="submit" class="btn disabled" value="✔ Save" disabled />
        <% } %>
      </div>
    </fieldset>
  </form>
</div>
<% if (!embed && twiml.key) { %>
<br>
<br>
<br>
<br>
<div class="span6" style="margin: 0 auto; float: none;">
  <p>Copy the following code to embed this TwiML on your site.</p>
  <pre>&lt;iframe
  src="//quicktwiml.herokuapp.com/TwiML/<%= twiml.key %>?embed=true"
  width="100%"
  height="345px"
&gt;&lt;/iframe&gt;</pre>
</div>
<% } else if (!twiml.embed) { %>
<% } %>
<% include bottom %>
